<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cs.pub.ro.hixmppclient.LogInActivity">

    <Spinner
        android:id="@+id/serverNameSpinnerRegister"
        style="@style/SpinnerAsEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/spaceAfterSpinnerRegister"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:dropDownVerticalOffset="0dp"
        android:dropDownWidth="220dp"
        android:spinnerMode="dropdown" />

    <Space
        android:id="@+id/spaceBeforeRegisterButtonRegister"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_above="@+id/registerButtonProceed"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/usernameTextViewRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/usernameEditTextLRegister"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="10dp"
        android:text="Username:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/colorBackground"
        android:textSize="20sp" />

    <Space
        android:id="@+id/spaceAfterSpinnerRegister"
        android:layout_width="80dp"
        android:layout_height="10dp"
        android:layout_above="@id/usernameTextViewRegister"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/usernameEditTextLRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/passwordTextViewRegister"
        android:layout_alignEnd="@+id/passwordEditTextRegister"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/passwordEditTextRegister"
        android:background="@drawable/username_edit_text"
        android:textSize="25sp" />

    <Space
        android:id="@+id/spaceBeforePasswordRegister"
        android:layout_width="10dp"
        android:layout_height="0dp"
        android:layout_below="@+id/usernameEditTextLRegister"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/passwordTextViewRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/passwordEditTextRegister"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="10dp"
        android:text="Password:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/colorBackground"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/passwordEditTextRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/spaceBeforeOptionalInfo"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/username_edit_text"
        android:textSize="25sp" />

    <Space
        android:id="@+id/spaceBeforeOptionalInfo"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_above="@+id/optionalInformationTextView" />

    <TextView
        android:id="@+id/optionalInformationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/optionalInfoBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="5dp"
        android:text="Optional information"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/colorBackground" />

    <View
        android:id="@+id/optionalInfoBar"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/spaceAfterOptionalInfoBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/textColorPrimary" />

    <ImageView
        android:id="@+id/optionalInfoIconImageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/optionalInfoBar"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:paddingBottom="10dp"
        android:src="@drawable/downside_triangle" />

    <Space
        android:id="@+id/spaceAfterOptionalInfoBar"
        android:layout_width="10dp"
        android:layout_height="25dp"
        android:layout_above="@+id/emailTextViewRegister" />

    <TextView
        android:id="@+id/emailTextViewRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/emailEditTextLRegister"
        android:padding="10dp"
        android:text="Email:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/colorBackground"
        android:textSize="20sp"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/emailEditTextLRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/nextOptionImageView"
        android:layout_alignEnd="@+id/registerButtonProceed"
        android:layout_alignRight="@+id/registerButtonProceed"
        android:layout_toRightOf="@+id/emailTextViewRegister"
        android:background="@drawable/username_edit_text"
        android:textSize="15sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/phoneNumberTextViewRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/phoneNumberEditTextLRegister"
        android:padding="10dp"
        android:text="Phone:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/colorBackground"
        android:textSize="20sp"
        android:visibility="invisible" />

    <EditText
        android:id="@+id/phoneNumberEditTextLRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/nextOptionImageView"
        android:layout_alignEnd="@+id/registerButtonProceed"
        android:layout_alignRight="@+id/registerButtonProceed"
        android:layout_toRightOf="@+id/emailTextViewRegister"
        android:background="@drawable/username_edit_text"
        android:textSize="15sp"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/previousOptionImageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@id/spaceBeforeRegisterButtonRegister"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorPrimary"
        android:padding="10dp"
        android:paddingBottom="10dp"
        android:src="@drawable/lefttside_triangle"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/nextOptionImageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@+id/spaceBeforeRegisterButtonRegister"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@color/colorPrimary"
        android:padding="10dp"
        android:paddingBottom="10dp"
        android:src="@drawable/rightside_triangle"
        android:visibility="invisible" />

    <Button
        android:id="@+id/registerButtonProceed"
        style="@style/mainActivityButton"
        android:layout_alignParentBottom="true"
        android:text="register"
        />

</RelativeLayout>
