<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/userPhotoImageViewMessages"
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/user_icon" />

    <TextView
        android:id="@+id/usernameTextViewMessages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/userPhotoImageViewMessages"
        android:layout_toRightOf="@+id/userPhotoImageViewMessages"
        android:paddingLeft="15dp"
        android:text="username"
        android:textColor="@color/colorPrimary"
        android:textSize="13sp" />


    <TextView
        android:id="@+id/messageTextViewMessages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/usernameTextViewMessages"
        android:layout_toEndOf="@+id/userPhotoImageViewMessages"
        android:layout_toLeftOf="@+id/frameLayoutMessages"
        android:layout_toRightOf="@+id/userPhotoImageViewMessages"
        android:layout_toStartOf="@+id/frameLayoutMessages"
        android:maxLines="2"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="message messagem essa gemess ag em essa gemessa gemess ag emessage dsad ad asd "
        android:textSize="18sp"
        android:visibility="visible" />


    <FrameLayout
        android:id="@+id/frameLayoutMessages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/userPhotoImageViewMessages"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/userPhotoImageViewMessages">

        <TextView
            android:id="@+id/messagesCountTextViewMessages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/user_messages_online"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/colorBackground"
            android:textSize="12sp"
            android:visibility="invisible" />

    </FrameLayout>


</RelativeLayout>