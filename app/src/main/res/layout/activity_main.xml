<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cs.pub.ro.hixmppclient.MainActivity">


    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:id="@+id/logoImageViewMain"
        android:scaleType="fitXY"
        android:clickable="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />


    <Space
        android:id="@+id/spaceAfterLogoImageMain"
        android:layout_width="80px"
        android:layout_height="200px"
        android:layout_below="@+id/logoImageViewMain"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/registerButtonMain"
        android:layout_below="@id/spaceAfterLogoImageMain"
        android:text="Register"
        android:textColor="@color/colorPrimary"
        android:textSize="25sp"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:background="@drawable/login_button_selected"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Space
        android:id="@+id/spaceAfterRegisterButton"
        android:layout_below="@+id/registerButtonMain"
        android:layout_width="80px"
        android:layout_height="40px"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/loginButtonMain"
        android:layout_below="@+id/spaceAfterRegisterButton"
        android:text="Log In"
        android:textColor="@color/colorPrimary"
        android:textSize="25sp"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:background="@drawable/login_button_selected"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/registerButtonMain"
        android:layout_alignEnd="@+id/registerButtonMain" />


</RelativeLayout>
