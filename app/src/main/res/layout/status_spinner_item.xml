<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <ImageView
        android:id="@+id/statusSpinnerIconImageView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/statusSpinnerTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/statusSpinnerTextView"
        android:src="@drawable/away_icon" />

    <TextView
        android:id="@+id/statusSpinnerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_toEndOf="@id/statusSpinnerIconImageView"
        android:layout_toRightOf="@id/statusSpinnerIconImageView"
        android:drawablePadding="20dp"
        android:gravity="left"
        android:paddingBottom="7dp"
        android:paddingLeft="30dp"
        android:paddingRight="16dp"
        android:paddingTop="6dp"
        android:text="selected"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/statusSpinnerTextView"
        android:background="@color/colorPrimary" />

</RelativeLayout>