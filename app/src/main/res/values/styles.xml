<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="HiWelcomeTheme" parent="HiMaterialTheme.Base">
        <item name="android:background">@color/colorTextViewBackground</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:colorAccent">@color/colorAccent</item>
    </style>

    <style name="HiMaterialTheme" parent="HiMaterialTheme.Base">

    </style>

    <!-- Base application theme. -->
    <style name="HiMaterialTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SpinnerWelcome">
        <item name="android:background">@drawable/server_spinner_welcome</item>
    </style>

    <style name="SpinnerStatus">
        <item name="android:background">@drawable/server_spinner_status</item>
    </style>
    
    <style name="mainActivityButton">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@drawable/login_button_selected</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

</resources>
